<div class="editPage">
    <h2>Edit photo</h2>
    {{#with photoDetails}}
    <form action="/edit/{{_id}}" method="post">
        <p>
            <input type="text" minlength="2" name="name" placeholder="Name" value="{{name}}">
        </p>

        <p>
            <input type="number" name="age" min="1" max="100" placeholder="Age" value="{{age}}">
        </p>

        <p>
            <textarea type="text" minlength="5" maxlength="50" name="description" placeholder="Description">{{description}}</textarea>
        </p>

        <p>
            <input type="text" minlength="5" maxlength="50" name="location" placeholder="Location" value="{{location}}">
        </p>

        <p>
            <input type="text" name="imageUrl" placeholder="Link to image" value="{{imageUrl}}">
        </p>

        <button class="edit-btn" type="submit">Edit Photo</button>
    </form>
    {{/with}}
</div>
