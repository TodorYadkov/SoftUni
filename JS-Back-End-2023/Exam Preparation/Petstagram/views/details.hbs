{{#with photoDetails}}
<div class="container">
    <div class="col-9">
        <div class="card">
            <div class="top">
                <div class="userDetails">
                    <div>
                        <div class="profilepic">
                            <div class="profile_img">
                                <div class="image">
                                    <img src="/static/images/person.png" alt="img8">
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3>
                        <p>
                            {{owner.username}}
                        </p>
                        <span>{{location}}</span>
                        {{#if isOwner}}
                        <div class="edit-delete-btns">
                            <a href="/edit/{{_id}}">
                                <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button">
                            </a>
                            <a href="/delete/{{_id}}">
                                <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button">
                            </a>
                        </div>
                        {{/if}}
                    </h3>
                </div>
            </div>

            <div class="imgBx">
                <img src="{{imageUrl}}" alt="post" class="cover">
            </div>
            <div class="bottom">
                <p class="message">
                    <b class="petDescription">{{description}}</b>
                </p>
                <div class="pet-details">
                    <p class="petName">Name: {{name}}</p>
                    <p class="petAge">Age: {{age}}</p>
                </div>
                <div class="comments">
                    <div class="comments-top">
                        {{#each commentList}}
                        {{>commentCard}}
                        {{/each}}
                    </div>
                </div>
            </div>
            {{#if canWriteComment}}
            <div class="addComments">
                <form method="post">
                    <textarea id="comment-textarea" name="comment" cols="40" rows="10" placeholder="Add comment..."></textarea>
                    <button type="submit">Post</button>
                </form>
            </div>
            {{/if}}
        </div>
    </div>
</div>
{{/with}}