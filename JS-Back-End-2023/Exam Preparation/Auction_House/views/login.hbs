<!-- Login Page -->
<section id="login-section" class="narrow">
    <h1 class="item">Login</h1>
    <div class="item padded align-center">
        {{#with userInput}}
        <form class="aligned" method="post" action="/login">
            <label>
                <span>Email</span>
                <input type="text" name="email" value="{{email}}">
            </label>
            <label>
                <span>Password</span>
                <input type="password" name="password" value="{{password}}">
            </label>

            <div class="align-center">
                <input class="action" type="submit" value="Sign In">
            </div>
        </form>
        {{/with}}
    </div>
</section>