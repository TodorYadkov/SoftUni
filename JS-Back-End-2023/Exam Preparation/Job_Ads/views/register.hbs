<section id="register-page">

    <article class="register-page-container">
        {{#with userInput}}
        <form action="/user/register" method="post" class="register-page-form">
            <h2>Register</h2>
            <p>Join us and find the perfect job.</p>

            <label for="email">Email:</label>
            <input type="text" id="email" placeholder="petar@abv.bg" name="email" value="{{email}}">

            <label for="password">Password:</label>
            <input type="password" id="password" placeholder="******" name="password" value="{{password}}">

            <label for="repeat-password">Repeat Password:</label>
            <input type="password" id="repeat-password" placeholder="******" name="rePass" value="{{rePass}}">

            <label for="description">Briefly describe your skills:</label>
            <input type="text" id="description" placeholder="Experience with HTML 5, CSS 3, Node.js" name="description" value="{{description}}">

            <article class="register-page-button">
                <button class="btn-register">Register</button>
            </article>

            <article class="account">
                <p>Already have an account? <a href="/user/login">Sign in</a></p>
            </article>

        </form>
        {{/with}}
        <article class="register-page-image">
            <img src="/static/img/job.png" alt="image">
        </article>
    </article>

</section>