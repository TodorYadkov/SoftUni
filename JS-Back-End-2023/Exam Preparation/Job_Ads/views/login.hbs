<section id="login-page">

    <article class="login-page-container">
        {{#with userInput}}
        <form action="/user/login" method="post" class="login-page-form">
            <h2>Login</h2>
            <p>Welcome, see the new ads!</p>

            <label for="email">Email:</label>
            <input type="text" id="email" placeholder="petar@abv.bg" name="email" value="{{email}}">

            <label for="password">Password:</label>
            <input type="password" id="password" placeholder="******" name="password" value="{{password}}">

            <article class="login-page-button">
                <button class="btn-login">Login</button>
            </article>

            <article class="no-account">
                <p>Don't have an account? <a href="/user/register">Sign up</a></p>
            </article>
        </form>
        {{/with}}
        <article class="login-page-image">
            <img src="/static/img/job.png" alt="job-image">
        </article>
    </article>

</section>