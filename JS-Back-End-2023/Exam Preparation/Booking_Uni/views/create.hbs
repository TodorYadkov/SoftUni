<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form id="formAddhotel" action="/create" method="POST">
        {{#with userInput}}
        <label for="hotelName">Hotel name:</label>
        <input type="text" id="hotel" name="hotelName" placeholder="Hotel name" value="{{hotelName}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="City" value="{{city}}">
        <label for="freeRooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="freeRooms" placeholder="Free rooms" value="{{freeRooms}}">
        <label for="imageUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" placeholder="https://" value="{{imageUrl}}">
        <input type="submit" class="create" value="Add">
        {{/with}}
    </form>
</section>