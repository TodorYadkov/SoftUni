<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    {{log hotelDetails}}
    {{#with hotelDetails}}
    <form id="formAddhotel" action="/edit/{{_id}}" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="hotelName" value="{{hotelName}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{city}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="freeRooms" value="{{freeRooms}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" value="{{imageUrl}}">
        <input type="submit" class="create" value="Add">
    </form>
    {{/with}}
</section>