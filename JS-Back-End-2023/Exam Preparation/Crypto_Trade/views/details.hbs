<section id="details-info">
    <h1>Details</h1>
    {{#with itemDetails}}
    <div class="coin-image">
        <img src="{{imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="payment">Payment method: {{payment}}</h3>
            <p id="price"><span>Price: ${{price}}</span></p>
            <p id="description">{{description}}.</p>
        </div>
        {{#if isLogged}}
        <div class="product-btn">
            {{#if isOwner}}
                <div class="author">
                    <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                </div>
            {{else}}
                {{#unless hasBought}}
                <a href="/details/{{_id}}/buy" class="btn-buy">Buy</a>
                {{else}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{/unless}}
            {{/if}}
        </div>
        {{/if}}
    </div>
    {{/with}}
</section>
