<section class="game-search">
    <h1>Search</h1>
    {{#with foundGames}}
    <form class="search-form" action="/search" method="POST">
        <input type="text" class="search-game" name="search" placeholder="Search here..." value="{{search}}">
        <select id="platform" name="searchPlatform">
            <option value="" {{#if (equal searchPlatform '' )}}selected{{/if}}>-------</option>
            <option value="PC" {{#if (equal searchPlatform 'PC' )}}selected{{/if}}>PC</option>
            <option value="Nintendo" {{#if (equal searchPlatform 'Nintendo' )}}selected{{/if}}>Nintendo</option>
            <option value="PS4" {{#if (equal searchPlatform 'PS4' )}}selected{{/if}}>PS4</option>
            <option value="PS5" {{#if (equal searchPlatform 'PS5' )}}selected{{/if}}>PS5</option>
            <option value="XBOX" {{#if (equal searchPlatform 'XBOX' )}}selected{{/if}}>XBOX</option>
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>
    {{/with}}

    <div class="search-result">
        <div class="search-list">
            {{#each foundGames}}
            {{>offerCard}}
            {{else}}
            <div class="no-match">
                <p>No match was found!</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>