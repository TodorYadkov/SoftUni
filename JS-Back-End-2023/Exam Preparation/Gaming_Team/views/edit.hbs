<section id="edit-container">
    <div class="edit-container-info">
        {{#if error}}
        <div class="errorContainer">
            {{#each error}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}
        <h1>Edit Game Code Offer</h1>
        {{#with gameDetails}}
        <form action="/edit/{{_id}}" method="POST">
            <label>Platform:</label>
            <select id="platform" name="platform">
                <option value="" {{#if (equal platform '' )}}selected{{/if}}>-------</option>
                <option value="PC" {{#if (equal platform 'PC' )}}selected{{/if}}>PC</option>
                <option value="Nintendo" {{#if (equal platform 'Nintendo' )}}selected{{/if}}>Nintendo</option>
                <option value="PS4" {{#if (equal platform 'PS4' )}}selected{{/if}}>PS4</option>
                <option value="PS5" {{#if (equal platform 'PS5' )}}selected{{/if}}>PS5</option>
                <option value="XBOX" {{#if (equal platform 'XBOX' )}}selected{{/if}}>XBOX</option>
            </select>
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{imageUrl}}" placeholder="http://...">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{price}}">
            <label>Genre:</label>
            <input type="text" id="genre" name="genre" value="{{genre}}">
            <label>Description:</label>
            <textarea id="description" name="description">{{description}}</textarea>

            <input type="submit" id="btn" value="EDIT"></input>
        </form>
        {{/with}}
    </div>
</section>