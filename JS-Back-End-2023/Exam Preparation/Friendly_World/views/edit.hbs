<main class="edit">
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            {{#with animalDetails}}
            <form class="create-form" action="/edit/{{_id}}" method="post">

                <input type="text" name="name" value="{{name}}" id="name" placeholder="Name" />
                <input type="text" name="years" value="{{years}}" id="years" placeholder="Years" />
                <input type="text" name="kind" value="{{kind}}" id="kind" placeholder="Kind" />
                <input type="text" name="imageUrl" value="{{imageUrl}}" id="animal-img" placeholder="Image url" />
                <input type="text" name="need" value="{{need}}" id="needs-of" placeholder="Needs of" />
                <input type="text" name="location" value="{{location}}" id="location" placeholder="Location" />
                <textarea id="description" placeholder="Description..." name="description">{{description}}</textarea>

                <button type="submit">Edit</button>
            </form>
            {{/with}}
        </div>
    </section>
</main>