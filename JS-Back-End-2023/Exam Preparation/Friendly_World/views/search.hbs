<main class="search">
    <section id="search">
        <h2>Search by Location</h2>

        <form class="search-wrapper cf" method="post">
            <input id="#search-input" type="text" name="query" value="{{foundAnimals.query}}"
                placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if foundAnimals}}
            <ul class="card-wrapper">
                {{#each foundAnimals}}
                {{> animalCard}}
                {{/each}}
            </ul>
            {{else}}
            <div id="no-post">
                <h2>There are no results found.</h2>
            </div>
            {{/if}}
        </div>
    </section>
</main>