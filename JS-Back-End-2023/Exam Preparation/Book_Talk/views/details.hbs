<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">
        {{#with bookDetails}}
        <article class="details-card-text">
            <h2>Title:<br> {{title}}</h2>
            <h3>Author: {{author}}</h3>
            <h3>Stars: {{stars}}</h3>
            <h3>Genre: {{genre}}</h3>
            <h3>Review: {{review}}</h3>

            {{#if isLogged}}
            <div class="buttons">
                {{#if isOwner}}
                <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                {{else}}
                {{#unless hasWished}}
                <a href="/details/{{_id}}/wish" class="btn-wish">Wish to read</a>
                {{else}}
                <p class="wish-pub">You already added the book to your wish list</p>
                {{/unless}}
                {{/if}}
            </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            <img src="{{imageUrl}}">
        </article>
        {{/with}}
    </article>
</section>