<section class="register-form-container">
    {{#if errors}}
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    {{#with userInput}}
    <form action="/user/register" method="POST">
        <h3>Register</h3>
        <label>Email</label>
        <input type="email" name="email" class="box" id="email" value="{{email}}">
        <label>Username</label>
        <input type="text" name="username" class="box" id="username" value="{{username}}">
        <label>Password</label>
        <input type="password" name="password" class="box" id="password" value="{{password}}">
        <label>Confirm Password</label>
        <input type="password" name="rePassword" class="box" id="rePassword" value="{{rePassword}}">
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/user/login">Click here</a></p>
    </form>
    {{/with}}
</section>